<bean id="postgres-ds" class="org.postgresql.ds.PGPoolingDataSource">
    <property name="serverName" value="#amqDbHost" />
    <property name="databaseName" value="#amqDbName" />
    <property name="portNumber" value="#amqDbPort" />
    <property name="user" value="#amqDbUser" />
    <property name="password" value="#amqDbPassword" />
    <property name="dataSourceName" value="postgres" />
    <property name="initialConnections" value="#amqDbInitialConnections" />
    <property name="maxConnections" value="#amqDbMaxConnections" />
</bean>